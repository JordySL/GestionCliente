@model Cake.Models.Cliente
@using Cake.Web.Models.Modal

<form asp-action="Create" role="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = String.Format("{0} Cliente", "Create") })

    <div class="modal-body form-horizontal">
        <div class="form-group">
            <label asp-for="nombre" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <input asp-for="nombre" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ApellidoPaterno" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <input asp-for="ApellidoPaterno" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ApellidoMaterno" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <input asp-for="ApellidoMaterno" class="form-control" />
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>


